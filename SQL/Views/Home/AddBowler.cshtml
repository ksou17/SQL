
@{
    ViewData["Title"] = "Add Bowler";
}
@model Bowler

<h1>Add a Bowler</h1>

<form method="post" asp-action="AddBowler">
    <div class="text-danger" asp-validation-summary="All"></div>


    
    <div class="form-group">
        <label asp-for="BowlerFirstName">First Name:</label>
        <input asp-for="BowlerFirstName" align="bottom" required />
    </div>
    <div class="form-group">
        <label asp-for="BowlerLastName">Last Name:</label>
        <input asp-for="BowlerLastName" align="bottom" required />
    </div>
    <div class="form-group">

        <label asp-for="BowlerMiddleInit">Middle Initial:</label>
        <input asp-for="BowlerMiddleInit" align="bottom" />
    </div>
    <div class="form-group">

        <label asp-for="BowlerAddress">Address:</label>
        <input asp-for="BowlerAddress" align="bottom" required />
    </div>
    <div class="form-group">

        <label asp-for="BowlerCity">City:</label>
        <input asp-for="BowlerCity" align="bottom" required />
    </div>
    <div class="form-group">

        <label asp-for="BowlerState">State:</label>
        <input asp-for="BowlerState" align="bottom" required />
    </div>
    <div class="form-group">

        <label asp-for="BowlerZip">Zip Code:</label>
        <input asp-for="BowlerZip" align="bottom" required />
    </div>
    <div class="form-group">

        <label asp-for="BowlerPhoneNumber">Phone Number:</label>
        <input asp-for="BowlerPhoneNumber" align="bottom" required />
    </div>
    <div class="form-group">

        <label asp-for="TeamID">Team ID:</label>
        <input asp-for="TeamID" align="bottom" required />
    </div>



    <div class="float-end">
        <input class="btn btn-primary" type="submit" value="Add Bowler" />
        <a class="btn btn-primary" asp-action="Index">Cancel</a>
    </div>


</form>
